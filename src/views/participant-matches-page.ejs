<%- include('header') %>
    <div class="mb-4">
        <a href="/manage-event/<%= eventId %>" class="text-red-500 hover:text-red-700 ml-2"> <i
                class="fa-solid fa-arrow-left-long"></i> Go back to manage event</a>
    </div>
    <table class="w-full table-auto border-collapse border border-gray-400">
        <thead>
            <tr>
                <th class="border border-gray-300 p-4">This member is giving ...</th>
                <th class="border border-gray-300 p-4">a gift to this member</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i of matches) { %>
                <tr>
                    <td class="border border-gray-300 p-4">
                        <%= i.member %>
                    </td>
                    <td class="border border-gray-300 p-4">
                        <%= i.assignee %>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>

    <%- include('footer') %>